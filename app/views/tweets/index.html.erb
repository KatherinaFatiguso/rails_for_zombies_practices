<h1>Listing Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Zombie</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= link_to tweet.zombie.id, zombie_path(tweet.zombie) %></td>
        <td><%= tweet.status %></td>
        <td><%= link_to 'Show', [@zombie, tweet] %></td>
        <td><%= link_to 'Edit', edit_zombie_tweet_path(@zombie, tweet) %></td>
        <td><%= link_to 'Destroy', [@zombie, tweet], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
